{
  "openapi": "3.0.0",
  "info": {
    "title": "Projeto TODO - Express & Prisma",
    "description": "Esse é um projeto utilizando Express e Prisma para criação de um TODO",
    "version": "1.0.0",
    "contact": {
      "name": "Eric Macedo Gomes",
      "url": "https://www.linkedin.com/in/eric-macedo-dev/",
      "email": "ericthr42@gmail.com"
    }
  },
  "paths": {
    "/user/create": {
      "post": {
        "tags": ["Usurário"],
        "summary": "Criando um novo usuário",
        "description": "Para criar um novo usuário adicione o campo 'name' no request body.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Usuário"
              },
              "examples": {
                "user": {
                  "value": {
                    "name": "Username"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Usuário"
                }
              }
            }
          },
          "400": {
            "description": "O nome não pode estar vazio"
          }
        }
      }
    },
    "/user/list/{name}": {
      "get": {
        "tags": ["Usurário"],
        "summary": "Buscar o usuário pelo 'name'",
        "description": "Para buscar o usuário é preciso adicionar o 'name' em req params",
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "description": "Nome do usuário para a busca",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Usuário"
                }
              }
            }
          }
        }
      }
    },
    "/todo/create/:id": {
      "post": {
        "tags": ["Todo"],
        "summary": "Create a todo for a user",
        "description": "To create a todo you need to add a description at the body"
      }
    }
  },
  "components": {
    "schemas": {
      "Usuário": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        }
      }
    }
  } 
}